{
  "name": "minesweeper-for-web",
  "version": "2.1.13",
  "description": "This is the classic microsoft minesweeper for the web.",
  "keywords": [
    "minesweeper",
    "javascript",
    "webcomponent",
    "custom-element"
  ],
  "homepage": "https://henkebyte.com/minesweeper",
  "bugs": {
    "url": "https://github.com/manuelhenke/minesweeper-for-web/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manuelhenke/minesweeper-for-web.git"
  },
  "license": "MIT",
  "author": {
    "name": "Manuel Henke",
    "email": "contact@henkebyte.com",
    "url": "https://henkebyte.com/"
  },
  "type": "module",
  "main": "dist/minesweeper.js",
  "module": "dist/minesweeper.js",
  "scripts": {
    "analyze": "cem analyze --litelement",
    "build": "webpack -c webpack.cjs",
    "format": "eslint . --fix && prettier . --write && stylelint ./src/*.scss --fix",
    "lint": "eslint . && prettier . --check && stylelint ./src/*.scss",
    "prepare": "husky install",
    "test": "web-test-runner",
    "test:watch": "web-test-runner --watch"
  },
  "commitlint": {
    "extends": "@commitlint/config-conventional"
  },
  "babel": {
    "assumptions": {
      "setPublicClassFields": true
    },
    "plugins": [
      [
        "@babel/plugin-proposal-decorators",
        {
          "decoratorsBeforeExport": true
        }
      ],
      [
        "@babel/plugin-proposal-class-properties"
      ]
    ],
    "presets": [
      [
        "@babel/preset-env"
      ]
    ]
  },
  "browserslist": [
    "last 4 version"
  ],
  "prettier": {
    "arrowParens": "avoid",
    "singleQuote": true
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parser": "@babel/eslint-parser",
    "extends": [
      "@open-wc",
      "prettier"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard-scss",
      "stylelint-config-prettier-scss"
    ]
  },
  "dependencies": {
    "lit": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-decorators": "^7.17.2",
    "@babel/preset-env": "^7.16.11",
    "@commitlint/config-conventional": "^16.2.1",
    "@custom-elements-manifest/analyzer": "^0.5.7",
    "@open-wc/eslint-config": "^7.0.0",
    "@open-wc/testing": "^3.0.4",
    "@web/test-runner": "0.13.27",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^8.2.3",
    "css-loader": "^6.5.1",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-lit-a11y": "^2.2.0",
    "eslint-plugin-wc": "^1.3.2",
    "html-loader": "^3.1.0",
    "husky": "^7.0.4",
    "postcss": "^8.4.4",
    "postcss-loader": "^6.2.1",
    "prettier": "^2.5.1",
    "sass": "^1.49.8",
    "sass-loader": "^12.6.0",
    "stylelint": "^14.5.3",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^3.0.0",
    "svg-inline-loader": "^0.8.2",
    "terser-webpack-plugin": "^5.3.1",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2"
  },
  "customElements": "custom-elements.json",
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  }
}
